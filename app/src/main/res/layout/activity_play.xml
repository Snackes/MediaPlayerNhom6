<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PlayActivity"
    android:background="@drawable/gardientback"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#3F51B5"
            android:shrinkColumns="0"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnDown"
                    android:layout_width="49dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:backgroundTint="#FFFFFF"
                    android:onClick="showMainSreen"
                    android:src="@drawable/ic_down"
                    android:tint="#FFFFFF" />

                <Button
                    android:id="@+id/btnThemPlayList"
                    android:layout_width="51dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:background="@drawable/ic_plus"
                    android:backgroundTint="#FCFCFC"
                    android:foregroundTint="#00FEFBFB"
                    android:onClick="showPlayListDialog"
                    android:tint="@color/cardview_light_background"
                    tools:ignore="OnClick" />

                <ImageButton
                    android:id="@+id/btnLove"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:onClick="clickLove"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_heart"
                    android:tint="@color/cardview_light_background"
                    tools:ignore="OnClick" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgMusic"
                android:layout_width="331dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:src="@drawable/adele" />

            <TextView
                android:id="@+id/songTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/title"
                android:textAlignment="center"
                android:textColor="#FAF6F6"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/singer"
                android:textAlignment="center"
                android:textColor="#F8F4F4"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="268dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:indeterminate="false"

                    android:max="100"
                    android:outlineAmbientShadowColor="@color/cardview_light_background"
                    android:progress="15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/startTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="00:00"
                        android:textColor="#F7EAEF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:text="10:00"
                        android:textAlignment="textEnd"
                        android:textColor="#FBEFEF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnShuf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_shuf"
                    android:tint="@color/cardview_light_background" />

                <ImageButton
                    android:id="@+id/btnPre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_pre"
                    android:tint="@color/cardview_light_background" />

                <ImageButton
                    android:id="@+id/btnPlayMenu"
                    android:onClick="PlaySong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:src="@drawable/ic_play_new"
                    android:tint="@color/cardview_light_background" />

                <ImageButton
                    android:id="@+id/btnNext"
                    android:onClick="NextSong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_next"
                    android:tint="@color/cardview_light_background" />

                <ImageButton
                    android:id="@+id/btnRepeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_repeat"
                    android:tint="@color/cardview_light_background" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>